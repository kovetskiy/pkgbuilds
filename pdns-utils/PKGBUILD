# Maintainer: Egor Kovetskiy <e.kovetskiy@gmail.com>
pkgname="pdns-utils"
pkgver=${PKGVER:-autogenerated}
pkgrel=${PKGREL:-1}
pkgdesc="utils for working with remote pdns server"
arch=("i686" "x86_64")
license=("GPL")
depends=()
makedepends=(
    "git"
)
source=(
    "pdns-utils::git://github.com/kovetskiy/pdns-utils.git"
)
md5sums=("SKIP")

pkgver() {
    cd "$srcdir/$pkgname"
    local date=$(git log -1 --format="%cd" --date=short | sed s/-//g)
    local count=$(git rev-list --count HEAD)
    local commit=$(git rev-parse --short HEAD)
    echo "$date.${count}_$commit"
}

build() {
    cd "$srcdir/$pkgname"

    # nothing to build
}

package() {
    install -DT "$srcdir/$pkgname/pdns" "$pkgdir/usr/bin/pdns"
	find "$srcdir/$pkgname/lib/" -type f -executable | while read filename; do
		install -DT "$filename" "$pkgdir/usr/lib/pdns/$(basename $filename)"
	done
}
