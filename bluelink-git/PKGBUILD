pkgname=bluelink-git
pkgver=autogenerated
pkgrel=1
pkgdesc="A utility for connecting to bluetooth devices."
arch=('i686' 'x86_64')
url="https://github.com/kovetskiy/bluelink"
license=('GPL')
source=(git://github.com/kovetskiy/bluelink)
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/bluelink"
    local date=$(git log -1 --format="%cd" --date=short | sed s/-//g)
    local count=$(git rev-list --count HEAD)
    local commit=$(git rev-parse --short HEAD)
    echo "$date.${count}_$commit"
}

build() {
    cd "$srcdir/bluelink"

    :
}

package() {
    mkdir -p $pkgdir/usr/bin/
    cp "$srcdir/bluelink/bluelink" $pkgdir/usr/bin/
}
