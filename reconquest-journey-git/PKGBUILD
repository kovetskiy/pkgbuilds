# Maintainer: Egor Kovetskiy <e.kovetskiy@gmail.com>
pkgname=reconquest-journey-git
_pkgname=reconquest-journey
_importpath="github.com/reconquest/journey"
pkgver=${PKGVER:-autogenerated}
pkgrel=${PKGREL:-1}
pkgdesc="minimalistic blog system patched by reconquest"
arch=('any')
license=('GPL')
depends=(
)
makedepends=(
	'go'
	'git'
)

source=(
	"$_pkgname::git://github.com/reconquest/journey#branch=${BRANCH:-master}"
)

md5sums=(
	'SKIP'
)

backup=(
)

pkgver() {
	if [[ "$PKGVER" ]]; then
		echo "$PKGVER"
		return
	fi

	cd "$srcdir/go/src/$_importpath"
	local date=$(git log -1 --format="%cd" --date=short | sed s/-//g)
	local count=$(git rev-list --count HEAD)
	local commit=$(git rev-parse --short HEAD)
	echo "$date.${count}_$commit"
}

build() {

    rm -rf "$srcdir/go/src/"
    mkdir -p "$srcdir/go/src/$(dirname $_importpath)"
	mv "$srcdir/$_pkgname" "$srcdir/go/src/$_importpath"

    cd "$srcdir/go/src/$_importpath"

	echo ":: Updating git submodules"
	git submodule update --init

	export GOPATH="$srcdir/go"
	echo ":: Building binary"
	go get -v \
		-gcflags "-trimpath $GOPATH/src"
}

package() {
    install -DT "$srcdir/go/bin/journey" "$pkgdir/usr/bin/journey"
}
